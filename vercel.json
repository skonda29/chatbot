{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.11"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "TRANSFORMERS_NO_TF": "1",
        "TOKENIZERS_PARALLELISM": "false",
        "NLTK_DATA": "/tmp/nltk_data"
    }
} 